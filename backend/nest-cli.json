{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "**/*.prisma",
        "outDir": "./dist",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "prisma": {
      "type": "library",
      "root": "generated/prisma",
      "entryFile": "index",
      "sourceRoot": "generated/prisma",
      "compilerOptions": {
        "tsConfigPath": "generated/prisma/tsconfig.json"
      }
    }
  }
}
